{
    "meta": {
        "version": "1.0.0", 
        "restRoot": "TA_bigfix", 
        "apiVersion": "3.0.0", 
        "name": "TA-bigfix", 
        "displayName": "BigFix TA"
    }, 
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "entity": [
                        {
                            "field": "name", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "maxLength": 50, 
                                    "errorMsg": "Length of Account name should be between 1 and 50", 
                                    "type": "string"
                                }, 
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }
                            ], 
                            "help": "Enter a unique name for this account.", 
                            "required": true, 
                            "label": "Account name", 
                            "type": "text"
                        }, 
                        {
                            "field": "username", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "maxLength": 200, 
                                    "errorMsg": "Length of username should be between 1 and 200", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Enter the username for this account.", 
                            "options": {
                                "placeholder": "Enter the username here"
                            }, 
                            "required": true, 
                            "label": "Username", 
                            "type": "text"
                        }, 
                        {
                            "field": "password", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Length of password should be between 1 and 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Enter the password for this account.", 
                            "required": true, 
                            "encrypted": true, 
                            "label": "Password", 
                            "type": "text"
                        }
                    ], 
                    "table": {
                        "header": [
                            {
                                "field": "name", 
                                "label": "Account name"
                            }, 
                            {
                                "field": "username", 
                                "label": "Username"
                            }
                        ], 
                        "actions": [
                            "edit", 
                            "delete", 
                            "clone"
                        ]
                    }, 
                    "title": "Account", 
                    "name": "account"
                }, 
                {
                    "entity": [
                        {
                            "defaultValue": "INFO", 
                            "field": "loglevel", 
                            "label": "Log level", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect"
                        }
                    ], 
                    "title": "Logging", 
                    "name": "logging"
                }, 
                {
                    "entity": [
                        {
                            "defaultValue": "", 
                            "field": "bigfix_server_url", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "URLof the BigFix Server", 
                            "required": false, 
                            "label": "BigFix Server URL", 
                            "type": "text"
                        }, 
                        {
                            "defaultValue": "52311", 
                            "field": "bigfix_server_port", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Port number assigned to BigFix (default: 52311)", 
                            "required": false, 
                            "label": "BigFix Server Port", 
                            "type": "text"
                        }
                    ], 
                    "title": "Add-on Settings", 
                    "name": "additional_parameters"
                }
            ], 
            "title": "Configuration", 
            "description": "Set up your add-on"
        }, 
        "inputs": {
            "table": {
                "moreInfo": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }, 
                    {
                        "field": "global_account", 
                        "label": "Global Account"
                    }, 
                    {
                        "field": "mac_address_property", 
                        "label": "MAC Address Property"
                    }
                ], 
                "header": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }
                ], 
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ]
            }, 
            "services": [
                {
                    "entity": [
                        {
                            "field": "name", 
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }, 
                                {
                                    "minLength": 1, 
                                    "maxLength": 100, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Enter a unique name for the data input", 
                            "required": true, 
                            "label": "Name", 
                            "type": "text"
                        }, 
                        {
                            "field": "interval", 
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex"
                                }
                            ], 
                            "help": "Time interval of input in seconds.", 
                            "required": true, 
                            "label": "Interval", 
                            "type": "text"
                        }, 
                        {
                            "defaultValue": "default", 
                            "field": "index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "maxLength": 80, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string"
                                }
                            ], 
                            "options": {
                                "createSearchChoice": true, 
                                "blackList": "^_.*$", 
                                "endpointUrl": "data/indexes"
                            }, 
                            "required": true, 
                            "label": "Index", 
                            "type": "singleSelect"
                        }, 
                        {
                            "field": "global_account", 
                            "help": "", 
                            "options": {
                                "referenceName": "account"
                            }, 
                            "required": true, 
                            "label": "Global Account", 
                            "type": "singleSelect"
                        }, 
                        {
                            "field": "mac_address_property", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "BigFix property name that provides the MAC address for BigFix clients", 
                            "required": true, 
                            "label": "MAC Address Property", 
                            "type": "text"
                        }
                    ], 
                    "title": "BigFix Asset List", 
                    "name": "bigfix_asset_list"
                }
            ], 
            "title": "Inputs", 
            "description": "Manage your data inputs"
        }
    }
